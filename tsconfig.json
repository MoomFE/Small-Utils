{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "./",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "declarationDir": "./types",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./packages/*"],
      "@@/*": ["./*"]
    },
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "packages",
    "test"
  ],
  "exclude": [
    "node_modules"
  ]
}
